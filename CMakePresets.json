{
  "version": 6,

"configurePresets": [
{
  "name": "default",
  "binaryDir": "${sourceDir}/build",
  "cacheVariables": {
    "SC_ENABLE_MPI": true,
    "CMAKE_COMPILE_WARNING_AS_ERROR": true
    }
}
],
"buildPresets":[
{
  "name": "default",
  "configurePreset": "default"
}
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "default",
  "output": {
    "outputOnFailure": true,
    "verbosity": "verbose"
  },
  "execution": {
    "noTestsAction": "error",
    "scheduleRandom": true,
    "stopOnFailure": false,
    "timeout": 60
  },
  "filter": {
    "exclude": {
      "label": "example"
    }
  }
}
],
"workflowPresets": [
  {
    "name": "default",
    "steps": [
      {
        "type": "configure",
        "name": "default"
      },
      {
        "type": "build",
        "name": "default"
      },
      {
        "type": "test",
        "name": "default"
      }
    ]
  }
]
}
